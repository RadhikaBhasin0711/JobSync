{
  "manifest_version": 3,
  "name": "JobSync - Application Tracker",
  "version": "1.0.0",
  "description": "Save job applications effortlessly from LinkedIn, Indeed & more.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*/*"   
  ],
  "action": {
    "default_popup": "popup/launcher.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
        "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/viewjob*",
        "*://*.indeed.com/*q=*",          
        "*://*/*/careers/*",              
        "*://*/*apply*",                  
        "*://*/*/jobs/*",                 
        "*://*/*/job/*"                   
        ],
        "js": ["content.js"],
        "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}